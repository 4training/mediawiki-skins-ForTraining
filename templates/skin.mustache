<div id="ft-wrapper" class="min-h-screen bg-white">
  <script src="https://cdn.tailwindcss.com"></script>
  <header id="ft-header" class="text-white p-4 shadow-lg">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/mediawiki/index.php/Special:MyLanguage/Start" title="Visit the main page" class="flex items-center hover:text-yellow-300 transition duration-300">
        {{#data-logos}}
          {{#1x}}<img id="ft-logo" src="{{.}}" alt="logo" class="h-12 w-auto mr-3"/>{{/1x}}
        {{/data-logos}}
      </a>
      <nav id="ft-header-menu" class="flex items-center space-x-6">
 

        {{#data-search-box}}
        <div id="p-search" role="search" class="relative">
          <form action="{{form-action}}" role="search" id="search" class="flex items-center">
            <input type="hidden" name="title" value="{{page-title}}">
            <label for="searchInput" class="sr-only">{{msg-search}}</label>
            <div class="relative flex items-center">
              <input type="search" id="searchInput" class="w-64 border border-gray-300 rounded-md py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Suche 'Schritte der Vergebung'" name="search">
              <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
              </svg>
            </div>
            <button type="submit" class="ml-2 bg-red-300 text-white rounded-md py-2 px-4 hover:bg-red-400 transition duration-300">Search</button>
          
		  </form>
        </div>
        {{/data-search-box}}

  <div id="mobile-menu-trigger">
			<button class="navbar-burger flex items-center text-blue-600 p-3">
				<svg class="block h-4 w-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<title>Mobile menu</title>
					<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
				</svg>
			</button>
		</div>

 
      </nav>
    </div>
  </header>
  <main id="ft-content" class="flex-grow container mx-auto px-4 py-8">
  {{! FIXME: this is hidden }}
    <div id="siteNotice" class="hidden mb-4 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4">{{{html-site-notice}}}</div>
    {{{html-user-message}}}
    <div class="mw-indicators mw-body-content">
      {{#array-indicators}}
      <div id="{{id}}" class="{{class}}">{{{html}}}</div>
      {{/array-indicators}}
    </div>
	<div class="text-4xl font-bold"> {{{html-title-heading}}}</div>
   
    <div class="bg-white rounded-lg shadow-xl p-6">
      <div id="contentSub" class="text-sm text-gray-600 mb-4">
        {{{html-subtitle}}}
        {{{html-undelete-link}}}
      </div>
      <div class="prose max-w-none">
        {{{html-body-content}}}
      </div>
      {{#data-portlets}}
      {{>CategoryPortlet}}
      {{/data-portlets}}
    </div>
    {{{html-after-content}}}
  </main>
</div>

  {{! FIXME: this is hidden }}
  <nav id="mw-navigation" class="hidden bg-green-600 text-white p-4">
    <h2 class="sr-only">{{msg-navigation-heading}}</h2>
    <div class="container mx-auto flex justify-between">
      <div id="mw-panel" class="space-y-4">
        {{#data-portlets-sidebar.data-portlets-first}}{{>Portlet}}{{/data-portlets-sidebar.data-portlets-first}}
        {{#data-portlets-sidebar.array-portlets-rest}}{{>Portlet}}{{/data-portlets-sidebar.array-portlets-rest}}
        {{#data-portlets.data-languages}}{{>Portlet}}{{/data-portlets.data-languages}}
		       <a href="/Special:MyLanguage/Essentials" class="hover:text-yellow-300 transition duration-300">{{msg-headnav-essentials}}</a>
        <a href="/Special:MyLanguage/More" class="hover:text-yellow-300 transition duration-300">{{msg-headnav-more}}</a>
        <a href="/Special:MyLanguage/Languages" class="hover:text-yellow-300 transition duration-300">{{msg-headnav-languages}}</a>
        <a href="/Special:MyLanguage/FAQ" class="hover:text-yellow-300 transition duration-300">{{msg-headnav-faq}}</a>
        <a href="https://www.4training.net/Special:MyLanguage/Contact" class="hover:text-yellow-300 transition duration-300">{{msg-contactpage-title}}</a>
      
	  </div>
      <div id="mw-head" class="flex items-center space-x-4">
        {{#data-portlets}}
          {{#data-user-menu}}{{>Portlet}}{{/data-user-menu}}
          <div id="right-navigation" class="flex space-x-4">
            {{#data-guidelines}}{{>Guidelines}}{{/data-guidelines}}
            {{#data-views}}{{>RightNavigation}}{{/data-views}}
            {{#data-namespaces}}{{>RightNavigation}}{{/data-namespaces}}
            {{#data-actions}}{{>RightNavigationMore}}{{/data-actions}}
          </div>
        {{/data-portlets}}
      </div>
    </div>
    <div id="ft-toggle-menu" class="fixed top-1/2 left-0 transform -translate-y-1/2">
      <a id="ft-closemenu" href="#" class="togglecollapse bg-white text-indigo-600 p-2 rounded-r shadow hover:bg-indigo-100 transition duration-300" title="{{msg-headnav-collapsemenu}}">&laquo;</a>
      <a id="ft-openmenu" href="#" class="toggleexpand bg-white text-indigo-600 p-2 rounded-r shadow hover:bg-indigo-100 transition duration-300 hidden" title="{{msg-headnav-expandmenu}}">&raquo;</a>
    </div>
  </nav>

  {{! FIXME: this is hidden }}
  <footer id="footer" class="hidden mw-footer bg-blue-800 text-white p-6" role="contentinfo" {{{html-user-language-attributes}}}>
    <div class="container mx-auto">
      {{#data-footer}}
        {{#data-icons}}{{>FooterList}}{{/data-icons}}
        {{#data-info}}{{>FooterList}}{{/data-info}}
      {{/data-footer}}
      <ul id="footer-login" class="mt-4">
        <li id="footer-loginlink"><a href="/Special:UserLogin" class="hover:text-yellow-300 transition duration-300">Login</a></li>
      </ul>
    </div>
  </footer>
</div>