<div id="ft-wrapper" class="min-h-screen bg-white">
  <script src="https://cdn.tailwindcss.com"></script>
	{{>Header}}
  <main id="ft-content" class="flex-grow container mx-auto px-4 py-8">
  {{! FIXME: this is hidden }}
    <div id="siteNotice" class="hidden mb-4 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4">{{{html-site-notice}}}</div>
    {{{html-user-message}}}
    <div class="mw-indicators mw-body-content">
      {{#array-indicators}}
      <div id="{{id}}" class="{{class}}">{{{html}}}</div>
      {{/array-indicators}}
    </div>
	<div class="text-4xl font-bold"> {{{html-title-heading}}}</div>
   
    <div class="bg-white rounded-lg shadow-xl p-6">
      <div id="contentSub" class="text-sm text-gray-600 mb-4">
        {{{html-subtitle}}}
        {{{html-undelete-link}}}
      </div>
      <div class="prose max-w-none">
        {{{html-body-content}}}
      </div>
      {{#data-portlets}}
      {{>CategoryPortlet}}
      {{/data-portlets}}
    </div>
    {{{html-after-content}}}
  </main>
</div>

  {{! FIXME: this is hidden }}
  <nav id="mw-navigation" class="hidden bg-green-600 text-white p-4">
    <h2 class="sr-only">{{msg-navigation-heading}}</h2>
    <div class="container mx-auto flex justify-between">
      <div id="mw-panel" class="space-y-4">
        {{#data-portlets-sidebar.data-portlets-first}}{{>Portlet}}{{/data-portlets-sidebar.data-portlets-first}}
        {{#data-portlets-sidebar.array-portlets-rest}}{{>Portlet}}{{/data-portlets-sidebar.array-portlets-rest}}
        {{#data-portlets.data-languages}}{{>Portlet}}{{/data-portlets.data-languages}}
		
      
	  </div>
      <div id="mw-head" class="flex items-center space-x-4">
        {{#data-portlets}}
          {{#data-user-menu}}{{>Portlet}}{{/data-user-menu}}
          <div id="right-navigation" class="flex space-x-4">
            {{#data-guidelines}}{{>Guidelines}}{{/data-guidelines}}
            {{#data-views}}{{>RightNavigation}}{{/data-views}}
            {{#data-namespaces}}{{>RightNavigation}}{{/data-namespaces}}
            {{#data-actions}}{{>RightNavigationMore}}{{/data-actions}}
          </div>
        {{/data-portlets}}
      </div>
    </div>
    <div id="ft-toggle-menu" class="fixed top-1/2 left-0 transform -translate-y-1/2">
      <a id="ft-closemenu" href="#" class="togglecollapse bg-white text-indigo-600 p-2 rounded-r shadow hover:bg-indigo-100 transition duration-300" title="{{msg-headnav-collapsemenu}}">&laquo;</a>
      <a id="ft-openmenu" href="#" class="toggleexpand bg-white text-indigo-600 p-2 rounded-r shadow hover:bg-indigo-100 transition duration-300 hidden" title="{{msg-headnav-expandmenu}}">&raquo;</a>
    </div>
  </nav>

  {{! FIXME: this is hidden }}
  <footer id="footer" class="hidden mw-footer bg-blue-800 text-white p-6" role="contentinfo" {{{html-user-language-attributes}}}>
    <div class="container mx-auto">
      {{#data-footer}}
        {{#data-icons}}{{>FooterList}}{{/data-icons}}
        {{#data-info}}{{>FooterList}}{{/data-info}}
      {{/data-footer}}
      <ul id="footer-login" class="mt-4">
        <li id="footer-loginlink"><a href="/Special:UserLogin" class="hover:text-yellow-300 transition duration-300">Login</a></li>
      </ul>
    </div>
  </footer>
</div>
